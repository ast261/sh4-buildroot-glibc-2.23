#!/bin/sh

DAEMON=/sbin/minisatip
PIDFILE=/var/run/minisatip.pid
MINISATIP_ARGS="-g -z /etc/sysconfig/minisatip"

if test -r /etc/sysconfig/oscam/oscam.server; then
  MINISATIP_ARGS="$MINISATIP_ARGS --dvbapi 127.0.0.1:9000"
fi

case "$1" in
  start)
    printf "starting minisatip: "
    start-stop-daemon -S -x "$DAEMON" -- $MINISATIP_ARGS
    [ $? = 0 ] && echo "OK" || echo "FAIL"
    ;;
  stop)
    printf "stopping minisatip: "
    start-stop-daemon -K -x "$DAEMON"
    [ $? = 0 ] && echo "OK" || echo "FAIL"
    ;;
  restart)
    $0 stop
    sleep 1
    $0 start
    ;;
  *)
    echo "Usage: $0 {start|stop|restart}"
    exit 1
    ;;
esac

exit $?
